<?xml version="1.0" encoding="utf-8"?>
<odoo>
 <data>
  <record id="royalty_report_form_view" model="ir.ui.view">
   <field name="name">jt.now.wizard.royalty.report.form.view</field>
   <field name="model">jt.now.wizard.royalty.report</field>
   <field name="arch" type="xml">
    <form string="PDF Report">
     <group>
      <group>
       <field name="period"/>
       <field force_save="1" name="date_from" readonly="period != 'custom'"/>
       <field force_save="1" name="date_to" readonly="period != 'custom'"/>
      </group>
      <group>
       <field name="royalty_value_id"/>
       <field name="commission"/>
      </group>
     </group>
     <footer>
      <button class="btn-primary" name="action_print_report" string="Print" type="object"/>
      <button class="btn-primary" name="action_generate_xlsx_report" string="Generate xlsx" type="object"/>
      <button class="btn-secondary" special="cancel" string="Cancel"/>
     </footer>
    </form></field>
  </record>
  <record id="now_royalty_report" model="ir.actions.act_window">
   <field name="name">Royalties PDF Report</field>
   <field name="res_model">jt.now.wizard.royalty.report</field>
   <field name="view_mode">form</field>
   <field name="target">new</field>
  </record>
  <menuitem action="now_royalty_report" id="menu_action_account_report_royalties" name="Royalties 2" parent="account.account_reports_management_menu"/>
 </data>
</odoo>