    <template id="find_retailer">
        <div id="find_retailer" t-if="product.is_dealer_product or product.is_custom_made_product"
            class="mt-3 pt-2 o_not_editable">
            <hr />
            <p>
                This product is available through our retailers.
            </p>
            <p>
                <a class="btn btn-secondary w-50" href="/retailers">find local retailer</a>
            </p>
        </div>
    </template>

    <template id="professional_recruitement">
        <div id="professional_recruitement" class="mt-3 pt-2 o_not_editable"
            t-if="product.is_custom_made_product or product.is_dealer_product">
            <hr />
            <p>
                Are you a professional?
            </p>
            <p>
                <a href="/my/home">Sign up</a> or <a href="/contact">get in touch</a> with us for
                more information about our trade conditions and project support. </p>
        </div>
    </template>

    <template id="professional_recruitement_card"
        inherit_id="jt_product_properties_website.website_sale_product">
        <xpath expr="//div[hasclass('card')]" position="before">
            <t t-if="product.is_custom_made_product or product.is_dealer_product">
                <div class="card bg-white" data-name="Item">
                    <a href="#" t-attf-data-target="#myCollapseTab{{uniq}}_dim" role="tab"
                        data-toggle="collapse" aria-expanded="false"
                        class="card-header s_faq_collapse_right_icon">Are you a professional?</a>
                    <div t-attf-id="myCollapseTab{{uniq}}_dim" class="collapse show"
                        data-parent="#myCollapse" role="tabpanel">
                        <div class="card-body">
                            <p>
                                <a href="/my/home">Sign up</a> or <a href="/contact">get in touch</a>
                                with us for more information about our trade conditions and project
                                support. </p>
                        </div>
                    </div>
                </div>
            </t>
        </xpath>
    </template>

