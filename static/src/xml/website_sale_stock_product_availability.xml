<?xml version="1.0" encoding="utf-8"?>
<templates>
    <t t-inherit="website_sale_stock.product_availability" t-inherit-mode="extension">
        <xpath expr="//div[@id='out_of_stock_message']" position="inside">
            <t t-else=''>Made especially for you, ships in 8 weeks.</t>
        </xpath>
        <xpath expr="//div[@id='threshold_message']" position="inside">
            <p>This product ships within a week.</p>
        </xpath>
    </t>
</templates>