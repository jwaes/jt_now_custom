<?xml version="1.0" encoding="utf-8"?>
<templates>
    <t t-name=":jt_now_custom.product_availability" t-inherit="website_sale_stock.product_availability">
        <div id="stock_now_test">
            <h3>Stock test</h3>
        </div>
        <xpath expr="//div[@id='out_of_stock_message']" position="inside">
            <t t-else=''>
                <span class="bubble mx-0 bubble_out_stock" title="out of stock" modifiers="{}"></span>
                ships in <t t-out="lead_time_out_stock" />
            </t>
        </xpath>
        <xpath expr="//div[@id='threshold_message']" position="after">
            <div id="on_stock_lead_time" t-if="free_qty gte 0">
                <span class="bubble mx-0 bubble_on_stock" title="on stock" modifiers="{}"></span> on
                stock, ships in <t t-out="lead_time_in_stock" />
            </div>
        </xpath>
    </t>
</templates>