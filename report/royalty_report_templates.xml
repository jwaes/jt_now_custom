    <template id="royalty_report_view">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
                    <div class="oe_structure" />
                    <h1>
                        Royalty detail
                    </h1>

                    <div class="row">
                        <div class="col-6"> Date from: <span t-out="date_from" />
                        </div>
                        <div class="col-6"> For: <span t-out="royalty_value_id.name" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6"> Date to: <span t-out="date_to" />
                        </div>
                        <div class="col-6" />

                    </div>
                    <br />

                    <table class="table table-condensed table-bordered">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Bill</th>
                                <th>Vendor</th>
                                <th>Product</th>
                                <th class="text-end">Qty</th>
                                <th class="text-end">Price</th>
                                <th class="text-end">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="line">
                                <tr>
                                    <td>
                                        <span t-field="line.date" />
                                    </td>
                                    <td>
                                        <span t-field="line.move_name" />
                                    </td>
                                    <td>
                                        <span t-field="line.partner_id.name" />
                                    </td>
                                    <td>
                                        <span t-field="line.product_id.name" />
                                    </td>
                                    <td class="text-end">
                                        <span t-field="line.quantity" />
                                    </td>
                                    <td class="text-end">
                                        <span t-field="line.price_unit"
                                            t-options="{'widget': 'monetary', 'display_currency': currency_id}" />
                                    </td>
                                    <td class="text-end">
                                        <span t-field="line.price_subtotal" />
                                    </td>
                                </tr>
                            </t>
                            <tfoot>
                                <tr>
                                    <td colspan="6"></td>
                                    <td class="text-end">
                                        <span t-out="total"
                                            t-options="{'widget': 'monetary', 'display_currency': currency_id}" />
                                    </td>
                                    <tr>
                                        <td colspan="5" />
                                        <td class="text-end"><span t-out="commission" /> %</td>
                                        <td class="text-end">
                                            <span t-out="total_commission"
                                                t-options="{'widget': 'monetary', 'display_currency': currency_id}" />
                                        </td>
                                    </tr>
                                </tr>
                            </tfoot>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>


</odoo>